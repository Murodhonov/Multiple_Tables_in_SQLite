<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MultipleTablesInSQLite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="myConstraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#CB3553FA</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="myConstraint2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#3553FA</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="myTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CB3553FA</item>
        <item name="android:drawableStart">@drawable/data</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20sp</item>
        <item name="android:text">Multiply Table SQLite</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="myTextView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CB3553FA</item>
        <item name="android:drawableStart">@drawable/customer</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20sp</item>
        <item name="android:text">Customers Table</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="myTextView3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CB3553FA</item>
        <item name="android:drawableStart">@drawable/worker</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20sp</item>
        <item name="android:text">Employee Table</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="myTextView4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#CB3553FA</item>
        <item name="android:drawableStart">@drawable/orders</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="elevation">10dp</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">20sp</item>
        <item name="android:text">Orders Table</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="myButton">
        <item name="android:layout_toLeftOf">@id/customer</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">Employee</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTop">@drawable/worker</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="backgroundTint">#3553FA</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="myButton2">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:text">Customer</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTop">@drawable/customer</item>
        <item name="android:layout_height">120dp</item>
